# vim:nu:ai:si:et:ts=4:sw=4:ft=conkyrc:

background no
out_to_x no
out_to_console yes
update_interval 3
total_run_times 0
use_spacer none

# temp, loadavg, cpu usage, cpu freq, battery, network (click launches wicd), date

TEXT
^fg(\#219dcd)${loadavg 1}^fg()  \
^fg(\#219dcd)${cpu cpu1}%^fg()   ^fg(\#219dcd)${freq_g 1}GHz^fg()   \
^fg(\#E0E3FF)${mem}^fg()   \
^fg(\#7aa5b7)${uptime}^fg() \
^fg(\#ffd500)${time %b %d %H:%M}^fg() \
